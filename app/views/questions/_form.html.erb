<%= form_for @question do |f| %>
  <% f.label :statement %>
  <%= f.text_field :statement, placeholder: "Your London Fact or Fiction ", autofocus: true %>
  </br>

  <%= f.radio_button :true_or_false, true %><%= f.label :true_or_false, 'Fact' %>
  <%= f.radio_button :true_or_false, false %> <%= f.label :true_or_false, 'Fiction' %>

  <%= f.submit "Save", class: "btn btn-primary", id: "btn-add-question" %>
<% end %>