<div class="flash-card">
  <h2>Is this fact or fiction?</h2>

  <%= form_for @response do |f| %>
  
    <h3 class='statement'><%= @question.statement %></h3>
      <%= f.hidden_field :question_id, value: @question.id %>

    <div class="radio-btn" data-toggle="buttons-radio">
      <%= f.submit "  Fact ", id: "true", class: "btn-large btn-response" %>
      <%= f.submit "Fiction", id: "false", class: "btn-large btn-response" %>
      </div>                      
  <% end %>
</div>

<%= link_to "Back", questions_path, class: "btn btn-primary" %>