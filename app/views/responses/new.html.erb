<div class="flash-card">
  <h1>Is this fact or fiction?</h1>

  <%= form_for @response do |f| %>

    <%= f.label :statement, @question.statement, class: "statement" %>

    <%= f.submit "  Fact ", id: "true_response", class: "btn-large btn-response" %>
    <%= f.submit "Fiction", id: "false_response", class: "btn-large btn-response" %>

  <% end %>
</div>

